    "@typescript-eslint/parser": "^6.21.0",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.0.0",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  }
